{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg/master/scripts/vcpkg.schema.json",
  "name": "sgl",
  "version": "0.1",
  "dependencies": [
    "boost-system",
    {
      "name": "cpprestsdk",
      "default-features": false
    },
    "boost-core",
    "boost-algorithm",
    "boost-filesystem",
    "boost-locale",
    "boost-interprocess",
    {
        "name": "boost-interprocess",
        "platform": "windows"
    },
    "libpng",
    {
        "name": "sdl2",
        "features": [ "vulkan" ]
    },
    "sdl2-image",
    "tinyxml2",
    "glew",
    "glm",
    {
        "name": "libarchive",
        "default-features": false,
        "features": [ "bzip2", "core", "lz4", "lzma", "zstd" ]
    },
    "vulkan",
    "vulkan-headers",
    "shaderc"
  ]
}
